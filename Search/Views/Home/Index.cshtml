@model IEnumerable<Search.Models.info>
@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    h1 {
        text-align: center;
        color: #5bc0de;
    }
    .top {
        margin-bottom: 5%;
    }

    .left-13 {
        margin-left: 13px;
    }
    .right-23 {
        margin-right: 23px;
        padding: 5px 7px;
    }
    .padding {
        padding: 3px 9px;
    }
    #Search {
        padding: 3px 5px;
    }
    option {
        background-color: #a3bdc5;
        color: #fff;
    }
    #searchBy {
        background: #5bc0de;
        color: #fff;
    }
</style>

<div id="wrapper">
    <div class="inside-wrapper">
<div class="container">
    <h1>Search with JSON</h1>
    <div class="top">
        <select id="searchBy" class="right-23">
            <option value="name">Name</option>
            <option value="id">Id</option>
        </select>

        @Html.TextBox("Search")<input type="submit" id="searchBtn" value="Search" class="btn btn-info left-13" /> <br />
    </div>
    <div class="table">
        <table class="table table-striped">

            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Degree</th>
                </tr>
            </thead>

            <tbody id="dataSearch">
                @foreach (var item in Model)
            {
                <tr>
                    <td>@item.id</td>
                    <td>@item.name</td>
                    <td>@item.degree</td>
                </tr>
        }
            </tbody>

        </table>
    </div>
</div>
</div>
</div>